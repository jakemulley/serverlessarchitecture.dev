{% extends "layouts/base.njk" %}

{% block content %}

  {% set sections = collections.all | eleventyNavigation %}

  {% for section in sections %}
    {% if section.title === title %}
      <nav class="space-y-4">
        <h2 class="font-semibold text-lg">In this section</h2>

        <ul class="space-y-2">
          {% for child in section.children %}
            <li>
              <a href="{{ child.url }}" class="underline bg-slate-100 dark:bg-slate-700 hover:bg-slate-200 dark:hover:bg-slate-600 p-2 overflow-hidden rounded-md inline-block">{{ child.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </nav>
    {% endif %}
  {% endfor %}

{% endblock %}
