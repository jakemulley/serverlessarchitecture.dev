{% extends "layouts/base.njk" %}

{% block content %}
  {% set sections = collections.all | eleventyNavigation %}

  <div class="space-y-8">
    <header class="prose pb-6 border-b">
      <h1>Welcome to {{ site.title }}</h1>
      <p class="lead">{{ tagline }}</p>
    </header>

    {% for section in sections %}
      {% if section.url !== "/" %}
        <section>
          <div class="flex flex-col md:flex-row items-baseline pb-4">
            <h2 class="text-2xl font-bold">{{ section.title }}</h2>
            <a href="{{ section.url }}" class="mt-2 md:ml-4 md:mt-0 hover:underline">View all <span class="sr-only">"{{ section.title }}" articles</span> &rarr;</a>
          </div>

          <ul class="divide-y border rounded-md overflow-hidden">
            {% for child in section.children %}
              <li>
                <a href="{{ child.url }}" class="block p-4 flex items-center justify-between hover:bg-gray-100">
                  <div>
                    <h3 class="font-medium">{{ child.title }}</h3>
                    {% if child.tagline %}
                      <p class="text-sm text-gray-600">{{ child.tagline }}</p>
                    {% endif %}
                  </div>
                  <span>&rarr;</span>
                </a>
              </li>
            {% endfor %}
          </ul>
        </section>
      {% endif %}
    {% endfor %}
  </div>
{% endblock %}
